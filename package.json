{
  "name": "node-ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clear && tsc",
    "clear": "rimraf ./dist",
    "dev": "env-cmd nodemon --exec 'ts-node' src/app.ts | pino-pretty -t SYS:standard -i hostname,pid",
    "lint": "eslint . --ext ts,json --fix",
    "start": "env-cmd ts-node dist/app.js",
    "test": "env-cmd -f .env.test ava",
    "coverage": "nyc npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/pino": "^6.3.3",
    "@types/pino-http": "^5.0.5",
    "@types/sinon": "^9.0.8",
    "@types/verror": "^1.10.4",
    "@types/yup": "^0.29.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "ava": "^3.13.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.5",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": "**/src/**/*.ts",
    "all": true,
    "require": [
      "ts-node/register"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint --cache --fix"
  },
  "dependencies": {
    "awilix": "^4.2.7",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "pino": "^6.7.0",
    "pino-http": "^5.3.0",
    "verror": "^1.10.0",
    "yup": "^0.29.3"
  }
}
